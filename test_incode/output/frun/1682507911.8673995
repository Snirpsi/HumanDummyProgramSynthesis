if __name__ == '__main__': 
    """ A function that converts a port. """    
    port = int(sys.argv[1])
    
    ports = [str(port)]
    
    ports_str = ','.join(ports)
    
    ports_str = ports_str.replace(',','')
    
    ports_str = ports_str.replace(' ','')
    
    ports_str = ports_str.replace('-','')
    
    ports_str = ports_str.replace('.','')
    
    ports_str = ports_str.replace(':','')
    
    ports_str = ports_str.replace(';','')
    
    ports_str = ports_str.replace(' ','')
    
    port
