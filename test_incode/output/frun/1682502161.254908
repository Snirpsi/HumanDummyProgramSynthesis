if __name__ == '__main__': 
    """ A function that opens a port. """    
    port = int(sys.argv[1])
    
    server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    server_socket.bind(('', port))
    server_socket.listen(1)
    
    while True:
        client_socket, address = server_socket.accept()
        
        server_socket.close()
        client_socket.close()
