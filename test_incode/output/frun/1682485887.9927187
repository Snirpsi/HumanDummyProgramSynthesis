if __name__ == '__main__': 
    """ A programm that converts a list of numbers. """    
    
    import sys
    
    if len(sys.argv) < 2:
        print('Usage: python list2num.py <list>')
        exit(1)
    
    list1 = [int(x) for x in sys.argv[1].split(',')]
    
    print(','.join(map(str, list1)))
