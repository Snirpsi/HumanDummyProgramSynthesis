if __name__ == '__main__': 
    """ A function that converts numbers. """    
    import sys
    
    try: 
        number = int(sys.argv[1])
    except ValueError:
        print("Usage: %s number" % sys.argv[0])
        sys.exit()
    
    number = str(number)
    
    print("The number is: %s" % number)
